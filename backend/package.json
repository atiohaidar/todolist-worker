{
  "name": "todolist-backend",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:migrate": "wrangler d1 execute todolist-db --file=./migrations/001_init.sql",
    "db:migrate:attachments": "wrangler d1 execute todolist-db --file=./migrations/002_add_attachments.sql",
    "db:migrate:remote": "wrangler d1 execute todolist-db --remote --file=./migrations/001_init.sql && wrangler d1 execute todolist-db --remote --file=./migrations/002_add_attachments.sql"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "bcryptjs": "^2.4.3",
    "hono": "^4.0.0",
    "jose": "^5.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231016.0",
    "wrangler": "^3.0.0"
  }
}
